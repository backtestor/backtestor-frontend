{
  "name": "backtestor",

  "image": "mcr.microsoft.com/devcontainers/javascript-node:latest",

  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  },

  "features": {
    "ghcr.io/devcontainers-contrib/features/npm-package:1": {}
  },

  "customizations": {
    "codespaces": {
      "openFiles": ["README.md"]
    },
    "vscode": {
      "extensions": [
        "astro-build.astro-vscode",
        "bradlc.vscode-tailwindcss",
        "dbaeumer.vscode-eslint",
        "dotjoshjohnson.xml",
        "esbenp.prettier-vscode",
        "fabiospampinato.vscode-optimize-images",
        "github.copilot",
        "github.copilot-chat",
        "github.copilot-labs",
        "github.vscode-github-actions",
        "github.vscode-pull-request-github",
        "jock.svg",
        "stylelint.vscode-stylelint"
      ]
    }
  },

  "forwardPorts": [3001],
  "portsAttributes": {
    "3001": {
      "label": "Backtestor Frontend",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "npm install -g npm-check-updates && npm update -g && npm install",

  "postAttachCommand": "npm run dev",

  // Set `remoteUser` to `root` to connect as root instead.
  // More info: https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "node"
}
