---
import BaseLayout from "@src/layouts/BaseLayout.astro";

export interface Props {
  title: string;
  description: string;
  header: string;
}

const { title, description, header }: Props = Astro.props;
---

<!-- Markdown Layout -->
<BaseLayout title={title} description={description} noindex={false} nofollow={false} requiresAuth={false} jsonLd={null}>
  <header class="flex flex-col items-center justify-center">
    <h1>{header}</h1>
  </header>
  <main>
    <slot />
  </main>
</BaseLayout>
