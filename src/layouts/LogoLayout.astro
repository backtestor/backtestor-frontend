---
import "@src/assets/styles/main.css";
import LogoLinkToHomepage from "@src/components/LogoLinkToHomepage.astro";
import type { Graph, Thing, WithContext } from "schema-dts";
import EmptyLayout from "./EmptyLayout.astro";

export interface Props {
  title: string;
  description: string;
  noindex: boolean;
  nofollow: boolean;
  requiresAuth: boolean;
  jsonLd: Graph | WithContext<Thing> | null;
}

const { title, description, noindex, nofollow, requiresAuth, jsonLd }: Props = Astro.props;
---

<!-- Logo Layout -->
<EmptyLayout
  title={title}
  description={description}
  noindex={noindex}
  nofollow={nofollow}
  requiresAuth={requiresAuth}
  jsonLd={jsonLd}
>
  <LogoLinkToHomepage />
  <slot />
</EmptyLayout>
